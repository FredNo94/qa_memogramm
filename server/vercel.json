{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/index.js",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "PATCH",
                "OPTIONS",
                "HEAD"
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://your-server-url.vercel.app/api/:path*"
        }
    ]
}